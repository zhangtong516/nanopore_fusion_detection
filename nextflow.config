profiles {
  standard {
    process.executor = 'local'
  }
  docker {
    docker.enabled = true
    docker.runOptions = params.jaffa_ref_dir ? "-v ${params.jaffa_ref_dir}:/ref" : ''
  }
  singularity {
    singularity.enabled = true
    singularity.autoMounts = true
    singularity.runOptions = params.jaffa_ref_dir ? "--bind ${params.jaffa_ref_dir}:/ref" : ''
  }
}

process {
  withName: BASECALL_DORADO {
    cpus = 8
  }
  withName: RUN_JAFFAL {
    cpus = 8
    memory = '16 GB'
  }
  withName: MAKE_REPORT {
    cpus = 1
  }
}

